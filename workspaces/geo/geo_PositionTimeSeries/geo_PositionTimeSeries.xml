<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
    <namespaces>
        <Namespace>
            <prefix>gml</prefix>
            <uri>http://www.opengis.net/gml/3.2</uri>
        </Namespace>
        <Namespace>
            <prefix>geo</prefix>
            <uri>urn:xml-gov-au:icsm:egeodesy:0.2</uri>
        </Namespace>
    </namespaces>
    <includedTypes>
         <Include>geo_PositionTimeSlice.xml</Include>
    </includedTypes>
    <sourceDataStores>
        <DataStore>
            <id>position_timeseries</id>
            <parameters>
                <Parameter>
                    <name>dbtype</name>
                    <value>postgisng</value>
                </Parameter>
                <Parameter>
                    <name>host</name>
                    <value>localhost</value>
                </Parameter>
                <Parameter>
                    <name>port</name>
                    <value>5432</value>
                </Parameter>
                <Parameter>
                    <name>database</name>
                    <value>surveymarks</value>
                </Parameter>
                <Parameter>
                    <name>user</name>
                    <value>postgres</value>
                </Parameter>
                <Parameter>
                    <name>passwd</name>
                    <value>postgres</value>
                </Parameter>
                <Parameter>
                    <name>Expose primary keys</name>
                    <value>true</value>
                </Parameter>
            </parameters>
        </DataStore>
    </sourceDataStores>
    <targetTypes>
        <FeatureType>
            <schemaUri>http://icsm.govspace.gov.au/files/2015/05/GeodesyML.xsd</schemaUri>
        </FeatureType>
        <FeatureType>
            <schemaUri>http://schemas.opengis.net/gml/3.2.1/gml.xsd</schemaUri>
        </FeatureType>
    </targetTypes>
    <typeMappings>
        <FeatureTypeMapping>
            <sourceDataStore>position_timeseries</sourceDataStore>
            <sourceType>position_timeseries</sourceType>
            <targetElement>geo:PositionTimeSeries</targetElement>
            <attributeMappings>
                <AttributeMapping>
                    <targetAttribute>
                        geo:PositionTimeSeries
                    </targetAttribute>
                    <ClientProperty>
                        <name>srsName</name>
                        <value>strConCat('http://www.opengis.net/gml/srs/epsg.xml#',d_epsg_code)</value>
                        <!--<value>'urn:ogc:def:crs:EPSG:6.9:4823'</value>-->
                    </ClientProperty>
                    <idExpression>
                        <OCQL>gid</OCQL>
                    </idExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        gml:location/gml:Point
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>geom</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        geo:atNode/geo:Node
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>at_node</OCQL>
                        <linkElement>geo:Node</linkElement>
                        <linkField>FEATURE_LINK[2]</linkField>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        geo:Status/geo:currentStatus/geo:statusCode
                      </targetAttribute>
                    <sourceExpression>
                        <OCQL>status_txt</OCQL>
                    </sourceExpression>
                    <ClientProperty>
                        <name>codeSpace</name>
                        <value>'urn:xml-gov-au:icsm:egeodesy:geodesyml_position-status'</value>
                    </ClientProperty>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>
                        geo:Status/geo:currentStatus/gml:validTime/gml:TimeInstant/gml:timePosition
                    </targetAttribute>
                    <sourceExpression>
                        <OCQL>date_mga_avail</OCQL>
                    </sourceExpression>
                </AttributeMapping>
                <AttributeMapping>
                    <targetAttribute>geo:history</targetAttribute>
                    <sourceExpression>
                        <OCQL>gid</OCQL>
                        <linkElement>geo:PositionTimeSlice</linkElement>
                        <linkField>FEATURE_LINK[1]</linkField>
                    </sourceExpression>
                    <isMultiple>true</isMultiple>
                </AttributeMapping>
            </attributeMappings>
        </FeatureTypeMapping>
    </typeMappings>
</as:AppSchemaDataAccess>
